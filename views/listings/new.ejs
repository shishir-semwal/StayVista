<% layout("/layouts/boilerplate") %>


    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create a new listing</h3>
            <form method="POST" action="/listings" 
            novalidate class="needs-validation" 
            enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
                    <div class="valid-feedback">Title Looks good</div>
                </div>
                <br>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter Description" type="text"
                        class="form-control" required></textarea>
                        <div class="invalid-feedback">Please add a valid  decription</div>
                </div>
                <br>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input name="listing[image]" type="file" class="form-control">

                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter Price" class="form-control" required>
                        <div class="invalid-feedback">Please add a valid Price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please add a valid country</div>
                    </div>

                </div>

                <br>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please add a valid Location</div>
                </div>


                <button class="btn btn-dark add-btn mt-3">ADD</button>
                <br><br><br><br>
            </form>
        </div>
    </div>